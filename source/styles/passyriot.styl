body
  font: normal normal 14px/1.3 arial
  // background: pink
  width: 50%
  margin: 100px auto


.passy__trigger
  position: absolute
  margin-left: -23px
  margin-top: 4px
  outline: none
.passy__icon
  display: block
  width: 16px
  height: 16px
  background-repeat: no-repeat
  background-position: 0 0
  &_closed
    margin-top: 1px
    background-image: url('data:image/png;base64,')
    @media(min-device-pixel-ratio: 2), (min-resolution: 192dpi) &
      background-image: url('data:image/png;base64,')
      background-size: 16px 16px
  &_opened
    background-image: url('data:image/png;base64,')
    @media(min-device-pixel-ratio: 2), (min-resolution: 192dpi) &
      background-image: url('data:image/png;base64,')
      background-size: 16px 16px

